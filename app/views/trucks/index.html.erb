<h2>Food Truck Heaven</h2>
<h4>Find Food Trucks in SF</h4>

	<%= form_for :truck do |f| %>
		<%= f.text_field :search_address, :placeholder => "Address..." %>
		<br/>
		<div id="radio-buttons">
			<%= f.radio_button :radius, '.25', :checked => true %>
			<%= label :radius_quarter_mile, ".25 Mile" %>
			<%= f.radio_button :radius, '.5' %>
			<%= label :radius_half_mile, ".5 Mile" %>
			<%= f.radio_button :radius, '.75' %>
			<%= label :radius_three_quarter_mile, ".75 Mile" %>
			<%= f.radio_button :radius, '1' %>
			<%= label :radius_one_mile, "1 Mile" %>
		</div>
		<br/>
		<%= f.submit :id => "search_button", :value => "Find Me Food!" %>
	<% end %>

<div id="map-canvas"></div>